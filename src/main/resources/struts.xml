<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.ui.theme" value="simple" />
	<constant name="struts.ui.templateDir" value="template" />
	<constant name="struts.ui.templateSuffix" value="ftl" />

    <constant name="struts.action.excludePattern" value="/static/.*?" />


    <package name="userDefault" namespace="/" extends="struts-default">
    	<interceptors>
			<interceptor name="UserCheckInterceptor" class="com.just.yt.project.interceptors.UserCheckInterceptor"/>
    		<interceptor-stack name="user-stack">
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="UserCheckInterceptor"/>
    		</interceptor-stack>
    	</interceptors>
		<default-interceptor-ref name="user-stack"/>
        <global-results>
			<result name="noLogin" type="redirect">/jsp/login.jsp</result>
			<result name="noPower" type="redirect">/jsp/error.jsp</result>
		</global-results>
    </package>


	<package name="loginDefault" namespace="/" extends="struts-default">
		<global-results>
			<result name="success">/jsp/index.jsp</result>
			<result name="noLogin" type="redirect">/jsp/login.jsp</result>
		</global-results>
	</package>
</struts>

